@model IEnumerable<SalesWebMVC.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1 id="pageTitle">Departments</h1>

<p>
    <a asp-action="Create" id="btnCreatDepartment" class="btn btn-secondary">Criar</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-info text-white">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="">
                    <a id="btnEditDepartment" class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a id="btnDetailsDepartment" class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a id="btnDeleteDepartment" class="btn btn-outline-secondary" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
