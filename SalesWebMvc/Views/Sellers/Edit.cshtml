@model SalesWebMVC.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]Create</h2>
<h4>Seller</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Seller.Id" />
            <div class="mb-3">
                <label asp-for="Seller.Name" class="fw-bold text-secondary"></label>
                <input asp-for="Seller.Name" class="form-control" />
                <span asp-validation-for="Seller.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Seller.Email" class="fw-bold text-secondary"></label>
                <input asp-for="Seller.Email" class="form-control" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Seller.BirthDate" class="fw-bold text-secondary"></label>
                <input asp-for="Seller.BirthDate" class="form-control" />
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Seller.BaseSalary" class="fw-bold text-secondary"></label>
                <input asp-for="Seller.BaseSalary" class="form-control" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Seller.DepartmentId" class="fw-bold text-secondary"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control"></select>
            </div>
            <div class="w-100">
                <input type="submit" value="Salvar" class="btn btn-success w-25" />
                <a asp-action="Index" class="btn btn-secondary w-25">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}